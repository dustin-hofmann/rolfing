---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="404 - Seite nicht gefunden">
  <section class="py-5 my-5 text-center">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <h1 class="display-1 fw-bold text-secondary-custom">404</h1>
          <h2 class="mb-4">Seite nicht gefunden</h2>
          <p class="lead mb-5">Die gesuchte Seite existiert leider nicht oder wurde verschoben.</p>
          <a href="/" class="btn btn-primary-custom btn-lg">Zur Startseite</a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>