  title: string;
  contentType: 'agb' | 'datenschutz' | 'impressum';
}

const { title, contentType } = Astro.props;
---

<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="legal-content">
          <h1 class="display-5 fw-bold text-secondary-custom mb-4">{title}</h1>
          
